{{>nav}}

<h1>This is the {{title}} template!</h1>

<h2>These people have also signed up to support the cause:</h2>

<ul>
    {{#userData}}
        <li>
            Name:
            {{#if url}}
                <a href="/{{url}}">
                    {{/if}}
                        {{first_name}} {{last_name}}
                    {{#if url}}
                </a>
            {{/if}}

            {{#if age}} | Age: {{age}} {{/if}}

            {{#if city}}
              | City: <a href="/signers/{{city}}"> {{city}} </a>
            {{/if}}
        </li>
    {{/userData}}
</ul>
